# SwitcherFi Environment Variables Template
# Copy this file to .env.local and fill in your actual credentials

# Supabase Configuration (if using Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ClubKonnect API Configuration (REQUIRED for bill payments)
CLUBKONNECT_API_URL=https://www.nellobytesystems.com
CLUBKONNECT_USERID=your_clubkonnect_userid
CLUBKONNECT_APIKEY=your_clubkonnect_apikey

# Sui Blockchain Configuration
NEXT_PUBLIC_SUI_NETWORK=testnet
NEXT_PUBLIC_SUI_RPC_URL=https://fullnode.testnet.sui.io:443

# Wallet Configuration
NEXT_PUBLIC_USE_REAL_WALLET=true

# Treasury Configuration
TREASURY_ADDRESS=0x03f4351fc3a187f58245e13e25bf0ab12e70e5e79a82f761cdb15997ba5df39c
TREASURY_PRIVATE_KEY=your_treasury_private_key_base64

# Exchange Rate API (CoinGecko - free tier)
EXCHANGE_RATE_API_URL=https://api.coingecko.com/api/v3
EXCHANGE_RATE_API_KEY=your_coingecko_api_key

# App Configuration
NEXT_PUBLIC_APP_NAME=SwitcherFi
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_REFERRAL_BONUS_PERCENTAGE=5

# Security
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# Development
NODE_ENV=development
